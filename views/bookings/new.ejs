<% include ../partials/header %>

<div class="container">
    <h1>New Reservation for <%= post.title %></h1>
    <form action="/categories/<%= category_id %>/posts/<%= post._id %>/bookings/" method="post">
        <div class='form-group'>
            <label for="date">Date</label>
            <input type="text" id="date" name="booking[date]" placeholder="MM/DD/YYYY" class='form-control'>
        </div>
        <div class='form-group'>
            <label for="payment">Payment Method</label>
            <input type="text" id ="payment" name="booking[payment]" placeholder="Payment Method" class='form-control'>
        </div>
        
        <button type="submit" class="btn btn-primary">Confirm Reservation</button>
    </form>
</div>

<% include ../partials/footer %>