<% include ../partials/header %>

<body>
    <div class='container'>
        <h1>Add Picture for Newly Created Post</h1>
        <form
            action='/categories/<%= category_id %>/posts/<%= post_id %>/upload'
            method='POST'
            enctype='multipart/form-data'>
            
            <div class='form-group'>
                <label for='image'>Upload Image</label>
                <input type='file' name='upl' id='image'>    
            </div>
            <button type='submit' class='btn btn-primary'>Upload</button>
            <a href='/categories/<%= category_id %>/posts/<%= post_id %>' class='btn btn-primary'>Skip</a>
        </form>
    </div>
</body>





