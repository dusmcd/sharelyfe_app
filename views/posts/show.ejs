<% include ../partials/header %>

<div class="container">
    <h1><%= post.title %></h1>
    <section class="row">
        <div class="col-md-12">
            <img src="<%= post.image[0] %>" class="img-fluid img-height">
        </div>
    </section>
    
    <h4>Description:</h4>
    <p><%= post.description %></p>
    
    <div class="row">
        <div class="col-md-3"><h4>Price:</h4></div>
        <div class="col-md-9"><%= post.price %></div>
    </div>
    <% if ((currentUser && String(post.author.id) !== String(currentUser._id)) || !currentUser) { %>   
        <a href='/categories/<%= category_id %>/posts/<%= post._id %>/bookings/new'
                                   class='btn btn-primary'>
            Make Reservation
        </a>
    <% } %>
    <!--only the author can see edit and delete buttons-->
    <% if (currentUser !== undefined && String(currentUser._id) === String(post.author.id)) { %>
        <a href='/categories/<%= category_id %>/posts/<%= post._id %>/edit' class='btn btn-sm btn-info buttons'>Edit Post</a>
        <form action='/categories/<%= category_id %>/posts/<%= post._id %>/?_method=DELETE' method="post" class="buttons">
            <button type="submit" class="btn btn-sm btn-danger">Delete Post</button>
        </form>    
    <% }; %>
    
</div>




<% include ../partials/footer %>