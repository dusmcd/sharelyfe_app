<% include ../partials/header %>

<div class="container">
    <h1><%= post.title %></h1>
    <section class="row">
        <div class="col-md-12">
            <img src="<%= post.image %>" class="img-fluid">
        </div>
    </section>
    
    <div class="row">
        <div class="col-md-6"><%= post.description %></div>
        <div class="col-md-6"><%= post.price %></div>
    </div>
    <!--only the author can see edit and delete buttons-->
    <% if (currentUser !== undefined && String(currentUser._id) === String(post.author.id)) { %>
        <a href='/categories/<%= category_id %>/posts/<%= post._id %>/edit' class='btn btn-sm btn-info buttons'>Edit Post</a>
        <form action='/categories/<%- category_id %>/posts/<%= post._id %>/?_method=DELETE' method="post" class="buttons">
            <button type="submit" class="btn btn-sm btn-danger">Delete Post</button>
        </form>    
    <% }; %>
    
</div>




<% include ../partials/footer %>