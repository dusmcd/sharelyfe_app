<% include ../partials/header %>

<div class='container'>
  <h1>Edit <%= post.title %> Post</h1>
  <form action='/categories/<%= category_id %>/posts/<%= post._id %>/?_method=PUT' method='POST'>
    <div class='form-group'>
        <input class='form-control' type='text' name='post[title]' value='<%= post.title %>'>
    </div>
    <div class='form-group'>
        <input class='form-control' type='text' name='post[image]' value='<%= post.image %>'>
    </div>
    <div class='form-group'>
        <input class='form-control' type='text' name='post[description]' value='<%= post.description %>'>
    </div>
    <div class='form-group'>
        <input class='form-control' type='text' name='post[price]' value='<%= post.price %>'>
    </div> 
    
    <button type='submit' class='btn btn-primary'>Submit Changes</button>
    </div>
</form>
</div>




<% include ../partials/footer %>