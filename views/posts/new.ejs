<% include ../partials/header %>

<div class="container">
    <h1>New Post for <%= category.name %></h1>
    <form action="/categories/<%= category._id %>/posts" method="post">
        <div class='form-group'>
            <label for="title">Title</label>
            <input type="text" id="title" name="post[title]" placeholder="Title" class='form-control'>
        </div>
        <div class='form-group'>
            <label for="description">Description</label>
            <textarea id ="description" name="post[description]" class='form-control'></textarea>
        </div>
        <div class='form-group'>
            <label for="price">Price</label>
            <input type="text" id="price" name="post[price]" placeholder="Price" class='form-control'>
        </div>
        <button type="submit" class="btn btn-primary">Next</button>
    </form>
</div>

<% include ../partials/footer %>